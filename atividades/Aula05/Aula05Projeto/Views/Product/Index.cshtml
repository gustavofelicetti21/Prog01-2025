@model List<Modelo.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-primary mb-2">
    Novo Product
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" title="Excluir Product @product.ProductName">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-success">
        Exportar Delimitado
    </a>
    <a asp-action="ExportFixedFile" asp-controller="Product" class="btn btn-primary">
        Exportar Limitado
    </a>
    <a asp-action="ImportDelimitatedFile" asp-controller="Product" class="btn btn-outline-warning">
        Importar Arquivo
    </a>
}
else
{
    <div>
        Não existem registros de Product
    </div>
}