@model List<Modelo.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-primary mb-2">
    Novo Product
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-secondary">
        Exportar Arquivo
    </a>
}
else
{
    <div>
        Não existem registros de Product
    </div>
}