@model List<Modelo.Customer>

<a asp-action="Create" asp-controller="Customer" class="btn btn-primary mb-2">
    Novo Customer
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Customer customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="ExportDelimitatedFile" asp-controller="Customer" class="btn btn-secondary">
        Exportar Arquivo
    </a>
}
else
{
    <div>
        Não existem registros de Customer
    </div>
}